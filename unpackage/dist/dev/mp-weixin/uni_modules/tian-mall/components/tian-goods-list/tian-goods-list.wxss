.goods-list-container {
  background: #ffffff;
  height: 100%;
  border-radius: 6rpx;
}
.goods-list-container.style-padding {
  background: none;
}
.goods-list-container.style-gride {
  background: none;
}
.goods-list-container.full {
  margin: 0;
  border-radius: 0;
}
.goods-list-container .goods-list .under-line:nth-last-child(1)::after {
  display: none;
}
.goods-list-container .goods-list .goods {
  margin-bottom: 12rpx;
  padding: 0 0 14rpx;
  display: flex;
  position: relative;
}
.goods-list-container .goods-list .goods-image {
  display: inline-block;
  width: 168rpx;
  height: 168rpx;
  border-radius: 12rpx;
}
.goods-list-container .goods-list .goods-content {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-list-container .goods-list .miaosha-process .progress-box {
  width: 200rpx;
}
.goods-list-container .goods-list.style-padding {
  background: none;
  margin: 16rpx;
  margin-top: 0;
  padding: 0;
}
.goods-list-container .goods-list.style-padding .goods {
  background: #ffffff;
  margin-bottom: 16rpx;
  padding: 16rpx;
  border-radius: 6rpx;
}
.goods-list-container .goods-list.style-gride {
  display: flex;
  flex-wrap: wrap;
}
.goods-list-container .goods-list.style-gride .goods {
  background: #ffffff;
  width: calc(50% - 14rpx);
  padding: 0 0 16rpx;
  display: block;
  overflow: hidden;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.goods-list-container .goods-list.style-gride .goods .goods-content {
  margin: 0 16rpx;
}
.goods-list-container .goods-list.style-gride .goods .goods-image {
  width: 100%;
  height: 350rpx;
  border-radius: 12rpx 12rpx 0 0;
}
.goods-list-container .goods-list.style-gride .goods:nth-child(2n) {
  margin-left: 24rpx;
}
.goods-list-container .goods-list.style-big-image {
  padding: 0;
}
.goods-list-container .goods-list.style-big-image .desc {
  display: block;
}
.goods-list-container .goods-list.style-big-image .goods {
  padding: 0;
  display: block;
  background: #ffffff;
  margin-bottom: 22rpx;
  border-radius: 22rpx;
  padding-bottom: 16rpx;
}
.goods-list-container .goods-list.style-big-image .goods .title {
  font-size: 34rpx;
  font-weight: 500;
}
.goods-list-container .goods-list.style-big-image .goods .goods-image {
  width: 100%;
  height: 300rpx;
  margin: 0 auto;
  display: block;
  border-radius: 22rpx 22rpx 0 0;
}
.goods-list-container .goods-list.style-big-image .goods .goods-content {
  margin-top: 16rpx;
  margin-right: 24rpx;
}
.goods-list-container .goods-list.waterfall {
  display: flex;
}
.goods-list-container .goods-list.waterfall .left {
  width: calc(50% - 8px);
}
.goods-list-container .goods-list.waterfall .right {
  width: calc(50% - 8px);
  margin-left: 24rpx;
}
.goods-list-container .goods-list.waterfall .goods-image {
  width: 100% !important;
}
.goods-list-container .goods-list.waterfall .under-line::after {
  display: none;
}
.goods-list-container .goods-list.waterfall .goods {
  width: 100%;
}
.goods-list-container .goods-list.waterfall .goods:nth-child(2n) {
  margin-left: 0rpx;
}

