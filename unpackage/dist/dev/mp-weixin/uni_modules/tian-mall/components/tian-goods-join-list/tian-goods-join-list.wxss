page {
  height: 100%;
}
.goods-list-container {
  background: #ffffff;
  height: 100%;
}
.goods-list-container.style-padding {
  background: none;
}
.goods-list-container.style-gride {
  background: none;
}
.goods-list {
  padding: 10rpx 26rpx 10rpx 16rpx;
  height: 100%;
}
.goods-list .goods {
  padding: 20rpx 0 14rpx;
  display: flex;
  position: relative;
}
.goods-list .miaosha-cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  z-index: 2;
}
.goods-list .goods-image {
  display: inline-block;
  width: 168rpx;
  height: 168rpx;
  border-radius: 12rpx;
}
.goods-list .goods-content {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-list .title {
  font-size: 28rpx;
}
.goods-list.style-padding {
  background: none;
  margin: 16rpx;
  padding: 0;
}
.goods-list.style-padding .goods {
  background: #ffffff;
  margin-bottom: 16rpx;
  padding: 16rpx;
  border-radius: 6rpx;
}
.goods-list.style-gride {
  display: flex;
  flex-wrap: wrap;
  padding: 0 16rpx;
  margin-top: 16rpx;
}
.goods-list.style-gride .goods {
  background: #ffffff;
  width: calc(50% - 14rpx);
  padding: 0 0 16rpx;
  display: block;
  overflow: hidden;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.goods-list.style-gride .goods .goods-content {
  margin: 0 16rpx;
}
.goods-list.style-gride .goods .goods-image {
  width: 100%;
  height: 350rpx;
}
.goods-list.style-gride .goods:nth-child(2n) {
  margin-left: 24rpx;
}

