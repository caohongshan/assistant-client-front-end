page {
  background: #FFFFFF;
  height: 100%;
  width: 100%;
}
.search {
  padding-top: 25px;
  padding-top: 0;
}
.container {
  display: flex;
  height: 100%;
  width: 100%;
}
.container > view {
  width: 100%;
}
.main-category-panel-all {
  background: #f2f2f2;
  flex: 1;
  height: calc(100vh - (0px) - (0px) - 25px - 110rpx);
  height: calc(100vh - (0px) - (0px) - 25px - 134rpx);
  display: flex;
  width: 100%;
  overflow-x: hidden;
}
.main-category-panel-all .cate-ad {
  width: 450rpx;
  height: 150rpx;
}
.scroll-view_W {
  width: 236rpx;
  height: 100%;
  text-align: center;
  background: #FFFFFF;
  background: #f2f2f2;
}
.scroll-view_W .item {
  height: 86rpx;
  font-size: 28rpx;
  line-height: 86rpx;
  background: #FFFFFF;
}
.scroll-view_W .item .text {
  background: #f2f2f2;
}
.scroll-view_W .current {
  font-size: 30rpx;
}
.scroll-view_W .current .text {
  background: #fff;
}
.scroll-view_W .prev .text {
  border-radius: 0 0 30rpx 0;
  overflow: hidden;
}
.scroll-view_W .next .text {
  border-radius: 0 30rpx 0 0;
  overflow: hidden;
}
.scroll-view-item_H:last-child {
  margin-right: 16rpx;
}
.scroll-view-item_H .text {
  margin-top: 8rpx;
  padding: 0rpx 8rpx;
  line-height: 1.4;
}
.scroll-view-item_H.current .text {
  background: #eb4e38;
  border-radius: 12rpx;
}
.content {
  background: #FFFFFF;
  padding-top: 30rpx;
  border-radius: 30rpx 0 0 0;
  height: calc(100% - 30rpx);
}
.content.main-index0 {
  border-radius: 0;
}
.sub-category {
  background: #FFFFFF;
  width: 510rpx;
  padding: 10rpx 0;
}
.sub-category .item {
  white-space: nowrap;
  font-size: 22rpx;
  text-align: center;
  line-height: 48rpx;
  background: #f5f5f5;
  border-radius: 60rpx;
  margin-left: 7px;
  width: 160rpx;
}
.sub-category .item.current {
  color: #eb4e38;
  font-weight: 600;
}
.scroll-h3 {
  height: calc(100% - 230rpx);
}
.third-category {
  padding-bottom: 60rpx;
}
.third-category .title {
  font-weight: 600;
  padding: 25rpx 0;
}
.third-category .sub-items {
  display: flex;
  flex-wrap: wrap;
  text-align: center;
  font-size: 24rpx;
  padding-right: 30rpx;
}
.third-category .sub-items .sub-item {
  width: 33.33%;
}
.third-category .image {
  width: 133rpx;
  height: 133rpx;
  display: block;
  margin: 6rpx auto;
}
.goods-list-panel {
  width: 100%;
  height: 100%;
  flex: 1;
}

