.container {
  position: relative;
}
.banner {
  background: #FFFFFF;
  height: calc(25px + 180rpx);
  overflow: hidden;
}
.banner .image {
  width: 750rpx;
  height: 260rpx;
}
.header {
  margin: 0 auto;
  width: 90%;
  margin-top: 20rpx;
  background: #FFFFFF;
  position: relative;
  z-index: 9;
  border-radius: 12rpx;
}
.tabs {
  position: -webkit-sticky;
  position: sticky;
  top: calc(25px + 80rpx);
  z-index: 9;
  text-align: center;
  padding: 20rpx 60rpx 20rpx;
  background: #fff;
  margin-top: 20rpx;
}
.tabs .current {
  color: #dd524d;
}
.tab-content {
  margin: 22rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #FFFFFF;
}
.tab-content .title-icon {
  background: #dd524d;
  width: 6rpx;
  height: 28rpx;
  display: inline-block;
  margin-right: 12rpx;
  border-radius: 4rpx;
}
.tab-content .children {
  display: flex;
  flex-wrap: wrap;
}
.tab-content .children .item {
  margin-right: 12rpx;
  width: 282rpx;
  background: #f5f5f5;
  margin-top: 16rpx;
  padding: 12rpx 18rpx;
  border-radius: 8rpx;
}

