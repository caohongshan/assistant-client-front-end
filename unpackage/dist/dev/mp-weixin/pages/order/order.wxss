page {
  height: 100%;
}
.tab-header {
  background: #ffffff;
  padding: 16rpx 10rpx 10rpx;
  position: fixed;
  top: 0px;
  left: 0;
  right: 0;
  z-index: 9;
}
.tab-header .tabs {
  padding-bottom: 12rpx;
  font-size: 30rpx;
  position: relative;
  margin-left: 12rpx;
  align-self: baseline;
  overflow: visible;
  white-space: nowrap;
}
.tab-header .current {
  color: #eb4e38;
  font-weight: 600;
  position: relative;
}
.tab-header .current::after {
  content: " ";
  border-bottom: 4rpx solid #eb4e38;
  position: absolute;
  left: 50%;
  right: 4rpx;
  bottom: 0;
  width: 60rpx;
  margin-left: -30rpx;
}
.item .image {
  background: #F1C3BF;
  width: 120rpx;
  height: 120rpx;
}
.item .price {
  color: #000;
}
.total {
  color: #333;
  font-size: 24rpx;
}
.total .price {
  font-size: 24rpx;
  color: #333;
}
.total .discount {
  color: #919191;
}
.tab-header-seize {
  height: 80rpx;
}

