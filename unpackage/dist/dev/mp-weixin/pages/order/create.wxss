.container {
  padding: 16rpx;
}
.head-bg {
  background: #eb4e38;
  height: 200rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
}
.tab-header {
  background: #e6434047;
}
.line-panel {
  position: relative;
  z-index: 9;
}
.line-panel .line-box {
  position: absolute;
  left: 0;
  bottom: 0;
  flex-wrap: nowrap;
  width: 100%;
  height: 2px;
  overflow: hidden;
  display: flex;
}
.line-panel .line-box .line-icon {
  flex-shrink: 0;
  width: 8px;
  height: 2px;
  margin-right: 4px;
  background-color: #518def;
  -webkit-transform: skewX(-45deg);
          transform: skewX(-45deg);
}
.line-panel .line-box .line-icon:nth-child(2n) {
  background-color: #e42311;
}
.cart-goods-list {
  padding-bottom: calc(0px + 120rpx);
}
.cart-goods-list .goods {
  margin-top: 14rpx;
  background: #ffffff;
  padding: 20rpx 12rpx 14rpx;
  display: flex;
  align-items: center;
  border-radius: 6rpx;
}
.cart-goods-list .goods-image {
  display: inline-block;
  width: 138rpx;
  height: 138rpx;
  border-radius: 12rpx;
  margin-left: 22rpx;
}
.cart-goods-list .goods-content {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-goods-list .title {
  font-size: 28rpx;
}
.cart-goods-list .sub-title {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin: 12rpx 0 18rpx;
  background: #f5f5f5;
  display: inline-block;
}
.fix-bottom {
  bottom: 0;
  position: fixed;
  z-index: 9;
  left: 0;
  right: 0;
  background: #ffffff;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

